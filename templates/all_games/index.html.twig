{% extends 'base.html.twig' %}

{% block title %}Hello AllGamesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {# show all games #}
    <h1>Games</h1>
    {# check games lenght #}
    {% if games|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Picture</th>
                <th>Name</th>
                <th>Categories</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {% for game in games %}
                <tr>
                    <td><img src="{{ game.picture }}" alt="game picture" width="100px"></td>
                    <td>{{ game.name }}</td>
                    <td>
                    {% for category in game.category %}
                        {{ category.name }}
                    {% endfor %}
                    </td>
                    <td>{{ game.price }}</td>
                    <td>
                        {# <a href="{{ path('game_show', {'id': game.id}) }}">show</a>
                        <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a> #}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No games found</p>
    {% endif %}
</div>
{% endblock %}
