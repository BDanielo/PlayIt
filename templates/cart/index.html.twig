{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>Cart</h1>
    {% if cart|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for games in cart %}
                    {% for game  in games %}
                    <tr>
                        <td>{{ game.gameEntity.name }}</td>
                        <td>{{ game.quantity }}</td>
                        <td>{{ game.gameEntity.price }}</td>
                        <td>{{ game.quantity * game.gameEntity.price }}</td> 
                    </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p><a href="{{path('app_all_games')}}">There are no products in your cart, add some !</p>
    {% endif %}
</div>
{% endblock %}
